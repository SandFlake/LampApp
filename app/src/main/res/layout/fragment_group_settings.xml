<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayoutGroup"
    android:background="#FCFCFC"
    tools:context=".Fragments.Lamp.LampSettingsFragment">

    <TextView
        android:id="@+id/textViewGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40C4FF"
        android:text="GROUP "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGroupLampStatus"
        android:layout_width="225dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:background="#40C4FF"
        android:text="LAMPS: OFF"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/switchOnOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLampsInGroup" />

    <Switch
        android:id="@+id/switchGroupOnOff"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#40C4FF"
        android:checked="false"
        android:switchPadding="10sp"
        android:textAlignment="center"
        android:textOff="LAMPS: OFF"
        android:textOn="LAMPS: ON"
        android:theme="@style/SwitchTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGroupLampStatus"
        app:layout_constraintTop_toBottomOf="@+id/textViewLampsInGroup"
        tools:checked="false" />

    <TextView
        android:id="@+id/textViewHueGroup"
        android:layout_width="357dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="15dp"
        android:background="#40C4FF"
        android:text="HUE: 150"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGroupLampStatus" />

    <SeekBar
        android:id="@+id/progressBarHueGroup"
        android:layout_width="356dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:max="255"
        android:min="0"
        android:progress="150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHueGroup" />

    <TextView
        android:id="@+id/textViewBrightnessGroup"
        android:layout_width="357dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="15dp"
        android:background="#40C4FF"
        android:text="BRIGHTNESS: 150"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarHueGroup" />

    <SeekBar
        android:id="@+id/progressBarBrightnessGroup"
        android:layout_width="356dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:max="255"
        android:min="0"
        android:progress="150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBrightnessGroup" />

    <TextView
        android:id="@+id/textViewLampGroupName"
        android:layout_width="357dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:background="#40C4FF"
        android:text="GROUP: "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarBrightnessGroup" />

    <Button
        android:id="@+id/btnDeleteGroup"
        android:layout_width="353dp"
        android:layout_height="67dp"
        android:background="#69D0FF"
        android:text="DELETE GROUP"
        android:textAlignment="center"
        android:textColor="#FF4081"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLampGroupName"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/textViewLampsInGroup"
        android:layout_width="411dp"
        android:layout_height="26dp"
        android:background="#69D0FF"
        android:textAlignment="center"
        android:textColor="#F8F7F7"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGroupName" />

</androidx.constraintlayout.widget.ConstraintLayout>

